html
    head
        title= title
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/error.css')
        link(rel='stylesheet', href='/stylesheets/common.css')
        script(src='/javascripts/common.js')
        script.
            window.onload = function () {
                let i = 8;
                window.setInterval(function () {
                    element('hint-message').innerText = `You will be sent to login within ${i} ${(i === 1 || i === 0) ? 'second' : 'seconds'}.`;
                    i--;
                }, 1000);
                window.setTimeout(function () {
                    window.location = 'http://localhost:8082/login'
                }, 9000);
                element('btn-back').onclick = function () {
                    window.location = 'http://localhost:8082/login'
                };
                document.addEventListener('keydown', function (event) {
                    if (event.keyCode === 13) {
                        window.location = 'http://localhost:8082/login'
                    }
                });
            };
    body
        div.container
            div.outer-space-top
                h1= message
                strong= error
                div#hint-message.text
                button#btn-back.btn.btn-secondary.outer-space-top-half Back to login
