        link(rel="stylesheet", href="/stylesheets/login.css")
        script(src='/javascripts/login.js')
        script(src='/javascripts/common.js')
    body
        div.container
            div.row.outer-space-top
                div.col-lg-8
                    strong(style="font-size: 64px;") Exam Record Query and Management System
                div.col-lg-4
                    div.title.outer-space-bottom Login
                    div.outer-space-bottom
                        div.tag ID
                        input#input-id.form-control(type="text")
                    div.outer-space-bottom
                        div.tag Password
                        input#input-password.form-control(type="password")
                    button#btn-login.btn.btn-primary.full-width.space-top-half.d-flex.justify-content-center
                        div.text#btn-login-text Login
                        div#btn-content-spinner.spinner-border(role="status")
                            span.visually-hidden Loading...
